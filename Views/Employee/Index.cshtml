@model EmployeeManagementSystem.Models.ViewModels.EmployeeViewModel;
@{
    var title = ViewData["Title"];

}

<h1>@title</h1>

<div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Employee Name</th>
                <th>Employee ID</th>
                <th>Employee Age</th>
                <th>Department</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model.Employees)
            {
                <tr>
                    <td>@employee.EmployeeName</td>
                    <td>@employee.EmployeeId</td>
                    <td>@employee.Age</td>
                    <td>@employee.Department.DepartmentName</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@employee.EmployeeId" class="btn btn-primary btn-sm me-2">Edit</a>
                        <a asp-action="Details" asp-route-id="@employee.EmployeeId" class="btn btn-info btn-sm me-2">Details</a>
                        <a asp-action="Delete" asp-route-id="@employee.EmployeeId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>